<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
    </style>

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <!--Requires API 21-->
        <!--
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
        -->
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!--Personalized Button-->
    <style name="Widget.MyApp.MyButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondary_dark</item>
        <item name="android:textColor">@color/on_secondary</item>
    </style>

    <!--Personalized CardView-->
    <style name="Widget.MyApp.MyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primary_light</item>
        <item name="cardCornerRadius">@dimen/rounded_corner</item>
    </style>

    <!--Personalized ImageButton-->


    <!--Personalized toolbar-->
<!--    <style name="Widget.MyApp.MyToolbar" parent="Widget.MaterialComponents.Toolbar">-->
<!--        <item name="background">@color/primary_light</item>-->
<!--    </style>-->

    <!--
    Dialog Theme
    -->

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
