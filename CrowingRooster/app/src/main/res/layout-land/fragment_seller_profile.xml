<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/primary_dark">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.225"
                    android:background="@color/primary_light"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.225"
                    android:background="@color/primary_dark"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.55">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:cardBackgroundColor="@color/primary_light"
                            android:layout_marginTop="@dimen/medium_margin"
                            android:layout_marginRight="@dimen/medium_margin"
                            android:layout_marginLeft="@dimen/medium_margin"
                            android:layout_marginBottom="@dimen/small_margin">

                            <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                                <TextView
                                    android:id="@+id/code_tv"
                                    style="@style/TextAppearance.AppCompat.Body1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/small_margin"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:text="@string/code"
                                    android:textAllCaps="true"
                                    android:textColor="@color/secondary_light"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/code_desc_tv"
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:textStyle="bold"
                                tools:text="00082318"
                                android:textColor="@color/on_primary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/small_margin"
                                android:layout_marginTop="@dimen/small_margin"
                                android:layout_marginEnd="@dimen/small_margin"
                                android:layout_marginBottom="@dimen/small_margin"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/code_tv"
                                app:layout_constraintVertical_bias="0.5" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:cardBackgroundColor="@color/primary_light"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginRight="@dimen/medium_margin"
                            android:layout_marginLeft="@dimen/medium_margin"
                            android:layout_marginBottom="@dimen/small_margin">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/name_tv"
                                    style="@style/TextAppearance.AppCompat.Body1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/small_margin"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:text="@string/name"
                                    android:textAllCaps="true"
                                    android:textColor="@color/secondary_light"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <Button
                                    android:id="@+id/name_btt"
                                    style="@style/Widget.MyApp.MyButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:layout_marginEnd="@dimen/small_margin"
                                    android:layout_marginBottom="@dimen/small_margin"
                                    android:text="@string/edit"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.5" />

                                <TextView
                                    android:id="@+id/name_desc_tv"
                                    style="@style/TextAppearance.AppCompat.Body1"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="@dimen/small_margin"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:layout_marginEnd="@dimen/small_margin"
                                    android:layout_marginBottom="@dimen/small_margin"
                                    android:textColor="@color/on_primary"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/guideline16"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/name_tv"
                                    app:layout_constraintVertical_bias="0.5"
                                    tools:text="Luis Manuel CalderÃ³n Perla" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline16"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.6"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:cardBackgroundColor="@color/primary_light"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginRight="@dimen/medium_margin"
                            android:layout_marginLeft="@dimen/medium_margin"
                            android:layout_marginBottom="@dimen/small_margin">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/tel_tv"
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/small_margin"
                                android:layout_marginTop="@dimen/small_margin"
                                android:text="@string/telephone"
                                android:textAllCaps="true"
                                android:textColor="@color/secondary_light"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:id="@+id/tel_btt"
                                style="@style/Widget.MyApp.MyButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:layout_marginEnd="@dimen/small_margin"
                                android:layout_marginBottom="@dimen/small_margin"
                                android:text="@string/edit"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />

                            <TextView
                                android:id="@+id/tel_desc_tv"
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="@dimen/small_margin"
                                android:layout_marginTop="@dimen/small_margin"
                                android:layout_marginEnd="@dimen/small_margin"
                                android:layout_marginBottom="@dimen/small_margin"
                                android:textColor="@color/on_primary"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/guideline15"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tel_tv"
                                app:layout_constraintVertical_bias="0.5"
                                tools:text="####-####" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.6"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:cardBackgroundColor="@color/primary_light"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginRight="@dimen/medium_margin"
                            android:layout_marginLeft="@dimen/medium_margin"
                            android:layout_marginBottom="@dimen/small_margin">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <TextView
                                    android:id="@+id/email_tv"
                                    style="@style/TextAppearance.AppCompat.Body1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/small_margin"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:text="@string/email"
                                    android:textAllCaps="true"
                                    android:textColor="@color/secondary_light"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <Button
                                    android:id="@+id/email_btt"
                                    style="@style/Widget.MyApp.MyButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:layout_marginEnd="@dimen/small_margin"
                                    android:layout_marginBottom="@dimen/small_margin"
                                    android:text="@string/edit"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.5" />

                                <TextView
                                    android:id="@+id/email_desc_tv"
                                    style="@style/TextAppearance.AppCompat.Body1"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="@dimen/small_margin"
                                    android:layout_marginTop="@dimen/small_margin"
                                    android:layout_marginEnd="@dimen/small_margin"
                                    android:layout_marginBottom="@dimen/small_margin"
                                    android:textColor="@color/on_primary"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/guideline14"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/email_tv"
                                    app:layout_constraintVertical_bias="0.5"
                                    tools:text="ungallocontenis@gmail.com" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/guideline14"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.6"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/change_pass_btt"
                            style="@style/Widget.MyApp.MyButton"
                            android:text="@string/change_password"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginLeft="@dimen/medium_margin"
                            android:layout_marginRight="@dimen/medium_margin"
                            android:layout_marginBottom="@dimen/medium_margin"
                            android:drawableLeft="@drawable/ic_key_black_filled_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_civ"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:src="@drawable/mr_peanutbutter"
                    app:civ_border_color="@color/primary_dark"
                    app:civ_border_width="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    app:srcCompat="@drawable/ic_key_black_filled_24dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.45"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>