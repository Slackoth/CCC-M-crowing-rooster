<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_header_height"
    android:background="@color/primary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/small_padding"
    android:theme="@style/Base.Theme.MyApp">
    
    <ImageView
        android:layout_width="@dimen/navigation_drawer_image_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_rooster_colored_512dp"
        android:contentDescription="@string/navigation_drawer_content_desc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/navigation_drawer_header_title"
        android:textColor="@color/on_primary"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</FrameLayout>